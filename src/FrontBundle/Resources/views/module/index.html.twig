{% extends 'base.html.twig' %}


{%  block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/front/css/metro.css') }}" />
{%  endblock %}

{% block mainContent %}

    <div style="padding: 40px">
    {% for module in  modules %}

        {#{% if nameFilter == null or module.object.name|lower == nameFilter|lower %}#}
            <div class='tile-wide fg-white user-module' data-role='tile' style='margin-right: 50px;margin-bottom: 40px;' id="{{ module.id }}">
                <div class='tile-content slide-up-2'>
                    <div class='slide'>

                    <div class='image-container image-format-fill' style='width: 100%; height: 100%;'><div class='frame'>
                            <div style="width: 100%; height: 100%; background-image: url('{{ asset('bundles/front/css/roue.png')}}'); background-size: cover; background-repeat: no-repeat; border-radius: 0px;"></div>
                        </div></div></div>
                <div class='slide-over bg-darkTeal padding10'>
                    <h1 style="color: white">{{ module.name}}</h1>

                    {% for moduleUser in user_modules %}

                        {% if moduleUser.id ==  module.id %}
                            <h1 style="font-size: 19px;bottom: 0;display: block;position: absolute;right: 0;margin-right: 16px;"><i class="fa fa-check-circle-o" aria-hidden="true"></i> Module activ√©</h1>
                        {% endif %}


                    {% endfor %}
                </div>
            </div>
        </div>

    {% endfor %}

    </div>
{% endblock %}

{%  block javascripts %}
    {{ parent() }}
    <script>

        $(document).ready(function(){
            $('.user-module').click(function () {
                $id = $(this).attr('id');
                window.location.href = Routing.generate('module_show',{id:$id});
            })

        });

    </script>
{%  endblock %}
